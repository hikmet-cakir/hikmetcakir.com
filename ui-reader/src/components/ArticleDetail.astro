---
const { article } = Astro.props;
const thumbnail = article.thumbnail || `https://picsum.photos/seed/${article.id}/1280/720`;
---

<article class="px-[15%] py-10">
  <header class="mb-8">
    <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 mb-3">{article.title}</h1>
    <p class="text-gray-500 text-sm">By Hikmet Çakır</p>
  </header>

  <figure class="mb-8">
    <img src={thumbnail} alt={article.title} class="w-full rounded-xl object-cover max-h-[520px]" loading="lazy" />
  </figure>

  <section class="max-w-3xl">
    <div class="article-content text-[1.08rem] leading-8 text-gray-800" set:html={article.content}></div>
  </section>
</article>

<style>
  .article-content :where(h1,h2,h3,h4,h5,h6){
    color:#111827; 
    line-height:1.25;
    margin-top:1.5rem;
    margin-bottom:0.75rem;
    font-weight:800;
  }
  .article-content h1{font-size:2rem}
  .article-content h2{font-size:1.5rem}
  .article-content h3{font-size:1.25rem}
  .article-content p{margin:1rem 0}
  .article-content a{color:#111827; text-decoration:underline; text-underline-offset:3px}
  .article-content ul{list-style:none; margin:1rem 0; padding:0}
  .article-content ol{list-style:decimal; list-style-position:outside; margin:1rem 0 1rem 1.25rem}
  .article-content li{position:relative; margin:0.25rem 0; padding-left:1.5rem; line-height:1.75}
  .article-content ul li::before{
    content:"✓";
    position:absolute; left:0; top:0.1rem;
    color:#10b981; 
    font-weight:700;
  }
  .article-content blockquote{
    border-left:4px solid #e5e7eb;
    padding:0.75rem 1rem;
    color:#374151;
    background:#ffffff;
    border-radius:0.5rem;
    margin:1.25rem 0;
  }
  .article-content pre{background:#0b1020; color:#e5e7eb; padding:1rem; border-radius:0.75rem; overflow:auto; margin:1rem 0}
  .article-content code{background:#f3f4f6; padding:0.1rem 0.3rem; border-radius:0.375rem}
  .article-content img{max-width:100%; border-radius:0.75rem; box-shadow:0 10px 15px rgba(0,0,0,0.08); margin:1rem 0}
</style>
