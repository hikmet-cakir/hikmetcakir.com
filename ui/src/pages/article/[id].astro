---
import Layout from "../../layouts/Layout.astro";
import ArticleDetail from "../../components/ArticleDetail.astro";
 
export const prerender = false;
 
const { id } = Astro.params;

if (!id) {
  throw new Error("Article ID is required");
}
 
const res = await fetch(`http://localhost:8080/article?id=${id}&size=10&page=0`);
const data = await res.json();
const article = data.articleSummaryList[0];
---

<Layout title={article.title}>
  <ArticleDetail article={article} isPreview={false} />
</Layout>
