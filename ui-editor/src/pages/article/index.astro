--- 
import BaseLayout from '../../layouts/BaseLayout.astro';  
  
const res = await fetch("http://localhost:8080/article?size=10&page=0");
const data = await res.json();
const articles = data.articleSummaryList || [];
---  
 <BaseLayout> 

      <div class="main-content">
        <div class="page-title">
          <div class="title">Article</div>
          <div class="action-buttons"> 
            <button  id="btnAddNew" class="btn btn-primary">
              <i class="fas fa-plus"></i>
              Add New
            </button>
          </div>
        </div>
  
        <div class="table-card">  
          <table class="data-table">
            <thead>
                <th>ID</th>
                <th>Title</th>
                <th>Category</th>
                <th>Created At</th> 
                <th>Actions</th>
            </thead>
            <tbody>
                {
                articles.length === 0 ? (
                  <tr>
                    <td colspan="6" style="text-align:center;">No articles found.</td>
                  </tr>
                ) : (
                  articles.map(article => (
                    <tr>
                      <td>{article.id}</td>
                      <td>{article.title}</td>
                      <td>{article.categoryId}</td>
                      <td>{new Date(article.created).toLocaleDateString()}</td> 
                      <td>
                        <div style="display:flex; gap:6px; flex-wrap:nowrap; justify-content:flex-start; align-items:center; max-width:100%; overflow:hidden;">
                        <button class="btn btn-outline btn-sm btn-edit"
                                data-id={article.id}
                                style="width:auto; min-width:75px; padding:4px 6px;">
                        <i class="fas fa-pen"></i> Edit
                        </button>            
                            <button
                                class="btn btn-outline btn-sm btn-delete"
                                data-id={article.id}
                                style="width:auto; min-width:75px; padding:4px 6px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                      </td>
                    </tr>
                  ))
                )
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>

     <script>
      document.addEventListener("DOMContentLoaded", () => {
        const editButtons = document.querySelectorAll(".btn-edit");
        editButtons.forEach(btn => {
          btn.addEventListener("click", () => {
            const id = btn.dataset.id;
            window.location.href = `/article/${id}`;
          });
        });

        const deleteButtons = document.querySelectorAll(".btn-delete");
        deleteButtons.forEach(btn => {
          btn.addEventListener("click", async () => {
            const id = btn.dataset.id;
            if (!confirm("Are you sure you want to delete this article?")) return;

            try {
              const res = await fetch(`http://localhost:8080/article/${id}`, {
                method: "DELETE",
              });

              if (res.ok) {
                alert("Article deleted successfully!");
                location.reload();
              } else {
                const msg = await res.text();
                alert("Failed to delete article: " + msg);
              }
            } catch (err) {
              alert("Error: " + err.message);
            }
          });
        });
      });

      const addBtn = document.getElementById("btnAddNew");
      if (addBtn) {
        addBtn.addEventListener("click", () => {
          window.location.href = "/article/new";
        });
      }
    </script>
</BaseLayout>